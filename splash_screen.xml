<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF03DAC5">

    <TextView
        android:id="@+id/Text_Job"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginTop="317dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="top"
        android:text="Job"
        android:textColor="#FFFFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text_CNX"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginTop="317dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="top"
        android:text="CNX"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_work"
        app:layout_constraintEnd_toEndOf="@+id/Text_Job"
        app:layout_constraintStart_toEndOf="@+id/Text_Job"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="177dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Text_Job"
        app:layout_constraintTop_toBottomOf="@+id/Text_Job" />

</androidx.constraintlayout.widget.ConstraintLayout>